    <div class = "field">
      <label>Title</label>
      <input placeholder="Title" type="text" name="stitle">
    </div>
    <div class = "field">
      <label>Artist</label>
      <input placeholder="Artist" type="text" name="sartist">
    </div>
    <div class="field">
      <label>Duration</label>
